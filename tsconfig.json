{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "allowJs": false,
    "noImplicitReturns": true,
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "sourceMap": true,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "dist"
  ]
}
